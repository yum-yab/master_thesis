@article{li_quasi-4-yr_2012,
	title = {Quasi-4-Yr Coupling between El Niño–Southern Oscillation and Water Vapor Transport over East Asia–{WNP}},
	volume = {25},
	issn = {0894-8755, 1520-0442},
