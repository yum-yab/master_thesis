	date = {2017-01-27},
	langid = {english},
	keywords = {{IVT}, Past Analysis},
	file = {Impact of moisture source variation on decadal-scale.pdf:/home/denis/Documents/Uni/Master/MA/literature/Impact of moisture source variation on decadal-scale.pdf:application/pdf},
